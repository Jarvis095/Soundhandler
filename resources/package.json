{
  "name": "core",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "-----BUILD-----": "",
    "build": "concurrently \"bun:build:*\"",
    "build:client": "node --es-module-specifier-resolution=node scripts/client",
    "build:server": "node --es-module-specifier-resolution=node scripts/server",
    "-----DEV-----": "",
    "dev": "concurrently \"bun:dev:client\" \"bun:dev:server\" \"bun:tsc\" -c \"green.bold,cyan.bold\"",
    "dev:client": "node --es-module-specifier-resolution=node scripts/client --dev",
    "dev:server": "node --es-module-specifier-resolution=node scripts/server --dev",
    "dev:web": "cd web && bun dev",
    "-----TSC-----": "",
    "tsc": "concurrently \"bun:tsc:*\" -c \"green.bold,cyan.bold\"",
    "tsc:client": "cd game/client && npx tsc -w",
    "tsc:server": "cd game/server && npx tsc -w"
  },
  "type": "module",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@citizenfx/client": "latest",
    "@citizenfx/server": "latest",
    "@types/node": "^22.16.5",
    "concurrently": "^8.2.2",
    "esbuild": "^0.23.0",
    "javascript-obfuscator": "^4.1.1",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@overextended/ox_lib": "latest",
    "axios": "^1.11.0",
    "music-metadata": "^11.7.1"
  }
}
